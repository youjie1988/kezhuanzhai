<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ensure_button_style">
        <item name="android:textSize">@dimen/bigFont</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_marginLeft">@dimen/smallMargin</item>
        <item name="android:layout_marginRight">@dimen/smallMargin</item>
        <item name="android:background">@drawable/blue_button_bg</item>
    </style>

    <style name="scan_layout_style">
        <item name="android:layout_marginLeft">@dimen/smallMargin</item>
        <item name="android:layout_marginRight">@dimen/smallMargin</item>
        <item name="android:layout_marginTop">@dimen/smallMargin</item>
        <item name="android:background">@drawable/white_button_bg</item>
    </style>

    <style name="scan_edit_style">
        <item name="android:layout_marginLeft">@dimen/smallMargin</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="percent_layout_style">
        <item name="android:layout_marginLeft">@dimen/smallMargin</item>
        <item name="android:layout_marginRight">@dimen/smallMargin</item>
        <item name="android:layout_marginTop">@dimen/smallMargin</item>
    </style>

    <style name="input_button_style">
        <item name="android:textSize">@dimen/smallFont</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/white_button_bg</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>

    <style name="menu_text_style">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/bar_font_blue</item>
        <item name="android:textSize">@dimen/smallFont</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray_bg</item>
        <item name="colorControlActivated">@color/gray_bg</item>
    </style>

    <style name="selectDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowBackground">@color/transparent</item>
    </style>

</resources>
